@model List<InstagramMVC.Models.InstagramModels.Media>

@{
    ViewBag.Title = "SearchByTag";
}

@*@{Html.RenderAction("UserInfoVidget", "Home");}*@
@using (Html.BeginForm())
{ 
    <input type="text" name="search_tag" value="@Convert.ToString(ViewBag.Tag)" style="width: 200px" />
    <input type="submit" value="Поиск" />
}
@if (Model != null)
{
<ul>
@foreach (var media in Model)
{ 
<li style='list-style:none;'>
    <table>
        <tr>
            <td>
                <img src="@media.Images.StandardResolution.Url" />
            </td>
        </tr>
        <tr>
            <td style="text-align: center">
                <b>Пользователь: @media.User.Username</b>
            </td>
        </tr>
    </table>
</li>
}
</ul>
}