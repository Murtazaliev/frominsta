@model IList<InstagramMVC.Models.AdminModels.Variable>
@{
    Layout = "_AdminLayout.cshtml";
}
@using (Html.BeginProfilePanel((InstagramMVC.Models.NavModel.TabPanel)Session["ADMINPANEL"], 1))
{
@Html.OperationOutput(TempData["result"])
using (Html.BeginForm("SaveVariables", "Admin"))
{
<div class="form-group">    
    @for (int i=0; i < Model.Count; i++)
    { 
    <div class="row">
        <div class="col-md-2">
            <label>@Model[i].VarName</label>
            @Html.Hidden("vars[" + @i + "].VarName", @Model[i].VarName)
        </div>
        <div class="col-md-5">
            @Html.TextBox("vars[" + @i + "].VarValue", @Model[i].VarValue, new {id = "vars[" + @i + "].VarName", @class = "form-control"})
        </div>
    </div>
    }
    <div class="row">
        <div class="col-md-1">
            @if ((bool)ViewBag.AllowSave)
            {
            <input type="submit" class="btn btn-success btn-lg" value="Сохранить" />
            }
        </div>
    </div>
</div>
}
}