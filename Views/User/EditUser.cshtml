@model InstagramMVC.Models.AppUser
@{
    Layout = "_UserLayout.cshtml";
}
@section Header
{
    @Scripts.Render("~/bundles/jqueryval")    
}
@using (Html.BeginProfilePanel((InstagramMVC.Models.NavModel.TabPanel)Session["PROFILEPANEL"], 0))
{ 
@Html.OperationOutput(TempData["result"])
using (Html.BeginForm("EditUser", "User"))
{ 
    @Html.HiddenFor(x => x.USER_LOGIN)
<div class="form-group">
    <div class="row">
        <div class="col-md-1">
            <label>Логин:</label>
        </div>
        <div  class="col-md-11">
            <label>@Model.USER_LOGIN</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <label>E-Mail:</label>
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.USER_EMAIL, new { @class = "form-control"})             
        </div>
        <div class="col-md-7">
            @Html.ValidationMessageFor(x => x.USER_EMAIL)
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <label>Фамилия:</label>
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.USER_LASTNAME, new { @class = "form-control"})
        </div>
        <div class="col-md-7">
            @Html.ValidationMessageFor(x => x.USER_LASTNAME)
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <label>Имя:</label>
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.USER_FIRSTNAME, new { @class = "form-control"})
        </div>
        <div class="col-md-7">
            @Html.ValidationMessageFor(x => x.USER_FIRSTNAME)
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <label>Отчество:</label>
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.USER_PATR, new { @class = "form-control"})
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <label>Телефон:</label>
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.USER_PHONE, new { @class = "form-control"})
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            <input type="submit" class="form-control btn btn-success" value="Сохранить" />
        </div>
    </div>
</div>
}   
}

